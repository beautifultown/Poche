<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="PLAYORDER"
        android:title="@string/pref_playorder"
        android:entries="@array/pref_playorder_summary"
        android:entryValues="@array/pref_playorder_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

    <ListPreference
        android:key="STROKEORIENTATION"
        android:title="@string/pref_strokeorientation"
        android:entries="@array/pref_strokeorientation_summary"
        android:entryValues="@array/pref_strokeorientation_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"/>

    <SwitchPreference
        android:key="STROKEPULL"
        android:title="Stroke pulls the next track"/>

    <SwitchPreference
        android:key="WAKELOCK"
        android:title="@string/pref_wakelock"/>

</PreferenceScreen>
